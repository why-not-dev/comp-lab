    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BackEnd",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host",
                "0.0.0.0"
            ],
            "jinja": true,
            "justMyCode": true,
            "python": "${workspaceFolder}/backend/env/scripts/python.exe"
        },
        {
            "name": "FrontEnd",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "npm: start",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/front-end",
            "runtimeExecutable": "/usr/bin/vivaldi",
            "runtimeArgs": ["--force-dark-mode", "--disable-web-security"],
            "userDataDir": "${workspaceFolder}/front-end/.browser-data"
        }
    ],
    "compounds": [
        {
            "name": "Launch Project",
            "configurations": ["FrontEnd", "BackEnd"]
        }
    ]
}
